            android:id="@+id/action_myItemsFragment3_to_personalInfoFragment4"
            app:destination="@id/personalInfoFragment" />
        <action
            android:id="@+id/action_myItemsFragment3_to_likedItemsFragment4"
            app:destination="@id/likedItemsFragment" />
    </fragment>
    <fragment
        android:id="@+id/likedItemsFragment"
        android:name="com.example.fragmenttest.LikedItemsFragment"
        android:label="fragment_liked_items"
        tools:layout="@layout/fragment_liked_items" >
        <action
            android:id="@+id/action_likedItemsFragment4_to_myItemsFragment3"
            app:destination="@id/myItemsFragment" />
